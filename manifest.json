{
  "manifest_version": 2,


  "name": "Cloaked!",
  "description": "This extension hides all Destiny 2 spoilers.",
  "version": "1.0",

  "permissions": [
    "*://*/*"],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Cloaked"
  },
  "content_scripts": [ 
    {
      "matches": ["<all_urls>"],
      // "matches": [ "http://*/*", "https://*/*"]
      "js" : ["ext/jquery.min.js"]
      // "run_at": ["document_end"]
    }
  ]
  
}
