{
  "manifest_version": 2,

  "name": "Cloaked!",
  "description": "This extension hides all Destiny 2 spoilers.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Cloaked: A Destiny 2 Spoiler Blocker"
  },

  "permissions": [
    "storage",
    "tabs"
  ],
  
  "content_scripts": [ {
    "js" : ["ext/jquery.min.js", "cloaked.js"],
    "matches": ["<all_urls>"]
  }],

  // Persists state for enabled button
  "background": {
    "scripts": ["backgroundEventPage.js"],
    "persistent": false
  }
}
